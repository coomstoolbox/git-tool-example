   	path = /Applications/p4merge.app/Contents/MacOS/p4merge #Mac
    cmd = /Applications/p4merge.app/Contents/MacOS/p4merge \"$BASE\" \"$LOCAL\" \"$REMOTE\" \"$MERGED\" #Mac

