    cmd = /Applications/p4merge.app/Contents/MacOS/p4merge \"$LOCAL\" \"$REMOTE\" #Mac
[mergetool "p4"]
# WindowsもしくはMacの必要な行だけ残す
   	path = \"C:/Program Files/Perforce/p4merge.exe\" #Windows
